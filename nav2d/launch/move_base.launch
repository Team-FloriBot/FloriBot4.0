<launch>
	<master auto="start"/>
	<!--arg name="local_planner" default="dwa_local_planner/DWAPlannerROS" /-->
	<arg name="local_planner" default="teb_local_planner/TebLocalPlannerROS" />
	<arg name="global_planner" default="global_planner/GlobalPlanner" />


	<!--- Run move_base --> 
	<!-- move_base is given access to the arguments at the top (subst_value="true")-->
	<!-- Decide what local and global planner configuration file to load-->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<rosparam file="$(find nav2d)/param/common_costmap_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find nav2d)/param/common_costmap_params.yaml" command="load" ns="local_costmap" /> 
		<rosparam file="$(find nav2d)/param/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find nav2d)/param/global_costmap_params.yaml" command="load" />
		
		<rosparam file="$(find nav2d)/param/move_base_params.yaml" command="load" subst_value="true" />	

		<rosparam file="$(find nav2d)/param/dwa_local_planner_params.yaml" command="load" if="$(eval arg('local_planner') == 'dwa_local_planner/DWAPlannerROS')" />		
		<rosparam file="$(find nav2d)/param/teb_local_planner_params.yaml" command="load" if="$(eval arg('local_planner') == 'teb_local_planner/TebLocalPlannerROS')" />

		<rosparam file="$(find nav2d)/param/global_planner_params_global.yaml" command="load" if="$(eval arg('global_planner') == 'global_planner/GlobalPlanner')" />
	</node>

	<!-- Run rviz -->
</launch>
